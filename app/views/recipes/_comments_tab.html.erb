<div class="comment-love">
	<h3>Comments</h3>
	<% if @comments.count > 0%>
		<div id="comments_wrapper">
		<%= render 'comments' %>
		</div>
	<% else %>
		<p>There are currently no comments. Be the first comment!</p>
	<% end %>   
	<div id="comments_form">
	<%= render 'comments_form' %>
	</div>
</div>