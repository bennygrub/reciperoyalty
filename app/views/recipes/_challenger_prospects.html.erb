    <div class="challenger_prospects">
      <div class="left prospect_box rounded">
        <h3 class="black_bars">The Reigning King</h3>
        <div class="left prospect_view rounded">
          <%= link_to @winner do %>
            <%= image_tag @winner.recipe_images.first.photo.url(), class: "fade" %>
          <% end %>
        </div>
        <div class="left" style="margin-top:15px;">
          <h4><%= @winner.name %></h4>
          <p>by <%= User.find(@winner.user_id).name %></p>
          <p><b>Time as King:</b> <%= time_ago_in_words(@winner.created_at) %></p>
        </div>
      </div>
      <div class="right prospect_box rounded">
        <div><h3 class="black_bars">The Challenger</h3></div>
        <div class="left prospect_view rounded">
          <%= image_tag @recipe.recipe_images.first.photo.url() %>
        </div>
        <div class="left" style="margin-top:15px;">
          <h4><%= @recipe.name %></h4>
          <p><b>Loves:</b> <%= Love.where("recipe_id = ?", @recipe.id).count %>/1000</p>
          <p><b>Time Left:</b> <%= distance_of_time_in_words(30.days.ago, @recipe.created_at, include_seconds: true) %></p>
        </div>
      </div>
    </div>
    <div class="clear_me"></div>